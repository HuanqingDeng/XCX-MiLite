 page, .main{
    height: 100%;
    overflow: hidden;
} 
.category-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right:1px solid #ddd;
    box-sizing: border-box;
}
.category-left .cate-list.on {
    color: rgb(219, 29, 29);
    transform: scale(1.3)
  }
.category-left .cate-list {
    font-size: 28rpx;
    text-align: center;
    line-height: 86rpx;
} 
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color:transparent;
}
.category-right{
    /* float: right; */
    height: 100%;
    width: 500rpx;
    /* background: #000; */
    margin-left: 95rpx;
    box-sizing: border-box
}
.category-right{
    position: relative;
    top: -550rpx;
    /* background: #000; */
}
.cat-title{
    /* display: block; */
    text-align: center;
    padding-bottom: 20rpx;
}
.cat-title .title{
    position: relative;
    top: 15rpx;
}
.cat-title .line{
    display: inline-block;
    width: 60rpx;
    height: 1rpx;
    border-top: 0.5px solid rgb(185, 183, 183);
    margin-right: 20rpx;
    margin-left: 20rpx;
    box-sizing: border-box
}
.pro-desc{
    display: inline-block;
    margin-right: 20rpx;
    margin-left: 20rpx;
    width: 133rpx;
    height: 140rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    /* background: #000; */
    box-sizing: border-box
}
.pro-desc:nth-child(3n){
    margin-right: 0;
}
.product .pro-desc .pro-image{
    display: block;
    width: 100rpx;
    height: 60rpx;
}
.product .pro-desc .pro-desc{
    font-size: 22rpx;
